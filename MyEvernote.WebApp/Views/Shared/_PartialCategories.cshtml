@using MyEvernote.BusinessLayer
@using MyEvernote.Entities

@{ 
    CategoryManager cm = new CategoryManager();
    List<Category> list = cm.GetCategories();
}

<p class="lead">Kategoriler</p>
<div class="list-group">
    <a href="@Url.Action("Index","Home")" class="list-group-item"><span class="fas fa-arrow-alt-right"> Tümü</span></a>

    @foreach (Category cat in list)
    {
    <a href="~/Home/ByCategory/@cat.Id" title="@cat.Description" class="list-group-item"><span class="fas fa-arrow-alt-right"></span> @cat.Title</a>
    }


</div>
