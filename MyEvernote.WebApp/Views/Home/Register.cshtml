
@{
    ViewBag.Title = "Register";
}

@using MyEvernote.Entities.ValueObjects
@model RegisterViewModel
@{
    ViewBag.Title = "MyEvernote - Kayıt Sayfası";
}
<link href="~/Content/login-register.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">Kayıt Formu</h1>
                </div>
                <div class="main-content">
                    @Html.ValidationSummary(false)
                    @*@if (ViewBag.SetLink != null)
                        {
                         <a href="@ViewBag.SetLink" class="btn btn-primary">Activate</a>
                        }*@
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="fas fa-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Kullanıcı adınız" })
                    </div>
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="fas fa-envelope" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "E-Posta Adresiniz" })
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="fas fa-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Şifreniz", type = "password" })
                    </div>
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="fas fa-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.RePassword, new { @class = "form-control", placeholder = "Şifreniz ( Tekrarı )", type = "password" })
                    </div>
                    <div class="form-group ">
                        <button type="submit" class="btn btn-danger btn-lg btn-block login-button">Kayıt Ol</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

<!-- Footer Gizleme -->
<script>
    $(function () {
        $("footer").parent().hide();
    })
</script>
<!-- Footer Gizleme -->
